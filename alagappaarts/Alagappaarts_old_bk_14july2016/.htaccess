RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]

RewriteRule ^newdance(.*)$ dance/$1 [R=301,NC,L]
RewriteRule ^newmusic(.*)$ music/$1 [R=301,NC,L]
RewriteRule ^newvaasthu(.*)$ vaasthu/$1 [R=301,NC,L]

RewriteRule ^music/admin(.*)$ /Musicpanel/admin/$1 [R=301,NC,L]
RewriteRule ^music/student(.*)$ /Musicpanel/student/$1 [R=301,NC,L]
RewriteRule ^music/center(.*)$ /Musicpanel/center/$1 [R=301,NC,L]
RewriteCond %{THE_REQUEST} //
RewriteRule ^ $0 [R=302]

# add a trailing slash to /wp-admin
RewriteRule ^([_0-9a-zA-Z-]+/)?wp-admin$ $1wp-admin/ [R=301,L]

RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]
RewriteRule ^([_0-9a-zA-Z-]+/)?(wp-(content|admin|includes).*) $2 [L]
RewriteRule ^([_0-9a-zA-Z-]+/)?(.*\.php)$ $2 [L]
RewriteRule . index.php [L]

